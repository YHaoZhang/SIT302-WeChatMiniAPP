/* pages/profile/profile.wxss */
.grxx{
    width: 100%;
    height: 412rpx;
    background-color: #f1f9ff;
    border-radius: 10rpx;
}
.grxx image{
    width: 112rpx;
    height: 112rpx;
    overflow: hidden;
    border-radius: 50%;
    margin-right: 10rpx;
    float: left;
    margin-top: 250rpx;
    margin-left: 50rpx;
}
.grxx .fl{
    width: 400rpx;
    height: 112rpx;
    overflow: hidden;
    float: left;
    margin-top: 250rpx;
    margin-left: 15rpx;
}
.grxx .fl text{
    width: 100%;
    float: left;
    font-size: 28rpx;
    font-weight: bold;
    display: block;
    color: #2699fb;
    margin-top: 15rpx;
}
.grxx .fl .text{
    font-weight: normal;
    font-size: 24rpx;
    margin-top: 10rpx;

}
.link-box{
  width: 100%;
  float: left;
  margin-top: 180rpx;
}
.link-box view{
  width: 100%;
  float: left;
  margin-top: 32rpx;
}
.link-box view image{
  width: 32rpx;
  height: 32rpx;
  float: left;
  margin-top: 4rpx;
}
.link-box view text{
  height: 32rpx;
  float: left;
  font-size: 32rpx;
  line-height: 40rpx;
  margin-left: 30rpx;
  color: #2699fb
}