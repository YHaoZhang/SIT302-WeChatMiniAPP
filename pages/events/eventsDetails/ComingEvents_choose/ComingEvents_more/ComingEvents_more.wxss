/* pages/events/eventsDetails/ComingEvents_choose/ComingEvents_more/ComingEvents_more.wxss */

.content .cell{
  width: 100%;
  float: left;
  margin-bottom: 60rpx;
}
.content .cell image{
  width: 36%;
  margin-right: 4%;
  float: left;
  
}
.content .cell .txt-box{
  width: 60%;
  float: left;
}
.content .cell .txt-box text{
    font-size: 40rpx;
    letter-spacing: 0px;
    color: black;
    font-weight: bold;
    float: left;
}
.content .cell .txt-box .tit{
    margin-top: 40rpx;
}
.content .cell .txt-box .info{
    color: rgba(36, 33, 38, 0.5);
    font-weight: normal;
    font-size: 24rpx;
    float: left;
    padding: 30rpx 0;
}
.content .cell .txt-box .more{
    display: block;
    width: 100%;
    background-image: linear-gradient(313deg, #5abd8c 0%, #00ff81 100%);
    box-shadow: 0px 5px 15px 0px rgba(90, 189, 140, 0.5);
    border-radius: 10px;
    line-height: 2.5em;
    font-size: 12px;
    color: white;
    text-align: center;
    margin-top: 80rpx;
}
.content .detail-txt{
  width: 100%;
  float: left;
}
.content .detail-txt .box{
  width: 100%;
  float: left;
}
.content .detail-txt .box .name{
  width: 100%;
  float: left;
  font-size: 40rpx;
  font-weight: bold
}
.content .detail-txt .box .timer{
  width: 100%;
  float: left;
  font-size: 40rpx;
  color: #707070;
}