<!--pages/events/eventsDetails/eventsDetails.wxml-->
<image class='back_img' mode='aspectFill' src='../../../img/bga.png'></image>
<view  class='content'>
    <view class='cell'>
        <image mode='widthFix' src='../../../img/dekin.png'></image>
				<view class="txt-box">
					<text class="tit">Deakin University Preaching</text>
					<!-- <text class="info">Deakin University Presentation.</text> -->
					<text class="more" bindtap="moreClick" id='{{index}}'>Register for this event</text>
				</view>
    </view>

    <view class="detail-txt">
			<view class="box">
				<text class='name'>Time:</text>
				<text class='timer'>9:00am-10:00am,
				Monday, 9 September</text>
			</view>
      <view class="box">
				<text class='name'>Duration:</text>
				<text class='timer'></text>
			</view>
			<view class="box">
				<text class='name'>Location:</text>
				<text class='timer'>{{event.address}}</text>
			</view>
      <view class="box">
				<text class='name'>Description:</text>
				<text class='timer'>{{event.description}}</text>
			</view>
		</view>
</view>